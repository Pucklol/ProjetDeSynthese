{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Liste des menus</h1>

    <div class="row">
        {% for menu in menus %}
            <div class="col-lg-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h3 class="card-title">{{ menu.menuName }}</h3>

                        {% if app.user is not null %}
                            {% set link="/order?menuId=" %}
                        {% else %}
                            {% set link="/login" %}
                        {% endif %}
                        <a href="{{ link ~ menu.id }}" class="card-link">
                            Commander ({{ menu.price }} â‚¬ )
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}